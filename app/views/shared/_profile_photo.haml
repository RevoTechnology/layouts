                .fieldContainer__label.fieldContainer__label--image
                    = "Фото разворота паспорта"
                %input.fieldContainer__field.field-image{:name => '', :type => "file"}
                .linkButton.linkButton--imageLoad
                    = "ЗАГРУЗИТЬ ДРУГОЕ"
            %p.formBlock__errorMessage
                = "Не загружено фото."
        .form__block.formBlock
            %label.formBlock__fieldContainer.fieldContainer.fieldContainer--image
                = image_tag "", class: "fieldContainer__imgBg"
                .fieldContainer__addImage
                .fieldContainer__label.fieldContainer__label--image
                    = "Фото страницы с регистрацией"
                %input.fieldContainer__field.field-image{:name => '', :type => "file"}
                .linkButton.linkButton--imageLoad
                    = "ЗАГРУЗИТЬ ДРУГОЕ"
            %p.formBlock__errorMessage
                = "Не загружено фото."
        .form__block.formBlock
            %label.formBlock__fieldContainer.fieldContainer.fieldContainer--image
                = image_tag "", class: "fieldContainer__imgBg"
                .fieldContainer__addImage
                .fieldContainer__label.fieldContainer__label--image
                    = "Ваше фото на фоне разворота паспорта"
                %input.fieldContainer__field.field-image{:name => '', :type => "file"}
                .linkButton.linkButton--imageLoad
                    = "ЗАГРУЗИТЬ ДРУГОЕ"
            %p.formBlock__errorMessage
                = "Не загружено фото."

        .form__hr
        .form__formBlockWrapper.formBlockWrapper.clearfix
            .formBlockWrapper__formBlock.formBlock.formBlock--continue
                %span.linkButton.linkButton--orange
                    = 'Продолжить'
            .formBlockWrapper__formBlock.formBlock.formBlock--reset
                %span.linkButton.linkButton--white.popup-close
                    = 'Отменить'
