.popup.profilePhoto
    .popup__steps.popupSteps
        .popupSteps__step.popupStep.popupStep--made
            %p.popupStep__number.popupStepNumber
                %span.popupStepNumber__info 1
            %span.popupStep__info
                = "Введите"
                %br
                = "номер телефона"
        .popupSteps__step.popupStep.popupStep--made
            %p.popupStep__number.popupStepNumber
                %span.popupStepNumber__info 2
            %span.popupStep__info
                = "Заполните"
                %br
                = "анкету"
        .popupSteps__step.popupStep.popupStep--current
            %p.popupStep__number.popupStepNumber
                %span.popupStepNumber__info 3
            %span.popupStep__info
                = "Загрузите фото"
                %br
                = "паспорта"
        .popupSteps__step.popupStep
            %p.popupStep__number.popupStepNumber
                %span.popupStepNumber__info 4
            %span.popupStep__info
                = "Оформите"
